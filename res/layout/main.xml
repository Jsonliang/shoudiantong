<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg3"
     >
<LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="fill_parent"
		 android:orientation="vertical"
		 android:gravity="center"
		>
		
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textStyle="bold"
        android:id="@+id/titletv"
		android:shadowColor="#ffffff"
    	android:shadowDx="1"
    	android:shadowDy="1"
    	android:shadowRadius="1"
    	android:gravity="center"
    	android:textColor="#333333"
    />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
    <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal"
		 android:gravity="center"
	>
		<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35%" 
        android:id="@+id/batterytv"
        android:gravity="center"
        android:textSize="16sp"
    />
		
</LinearLayout>

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powerbtn"
        android:background="@drawable/poweroff"
    />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
    />
</LinearLayout>
       <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
		 android:layout_alignParentBottom="true"
		>
       <CheckBox
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:text="@string/autoopen"
		 android:textColor="#AAAAAA"
		 android:layout_marginBottom="2dp"
		 android:textStyle="italic"
		 android:id="@+id/autocheck"
		/>
               <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="1dp"
		 android:orientation="horizontal"
		 android:background="#444444"
		/>
        <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal"
		 android:layout_marginBottom="2dp"
		 android:background="#000000"
		>
		
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fun1"
        android:layout_margin="2dp"
        android:id="@+id/fun1_btn"
    />
                
                          <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fun2"
        android:layout_margin="2dp"
        android:id="@+id/fun2_btn"
    />
                          
                                    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fun3"
        android:layout_margin="2dp"
        android:id="@+id/fun3_btn"
    />
                                    
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fun4"
        android:layout_margin="2dp"
        android:id="@+id/fun4_btn"
    />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    />
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/giftbox1"
        android:id="@+id/gift_btn"
        android:visibility="invisible"
    />
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    />

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fun5"
        android:layout_margin="2dp"
        android:id="@+id/fun5_btn"
    />
		</LinearLayout>
        
       	<LinearLayout
         	android:orientation="vertical"
		 	android:layout_height="wrap_content"
		 	android:layout_width="fill_parent"
		 	android:id="@+id/admainLayout"
		 	android:gravity="center"
		/>
       	
       </LinearLayout>
</RelativeLayout>